---
import Layout from '../../layouts/Layout.astro'
import Navigation from '../../components/Navigation'
---

<Layout title="Projects - Henok Wehibe">
  <Navigation client:load />
  
  <main class="pt-20">
    <div class="container mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
          All Projects
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          A comprehensive look at my work and contributions
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project cards would go here -->
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-6 border border-gray-700">
          <h3 class="text-xl font-bold mb-3 text-white">Ansible Events</h3>
          <p class="text-gray-400 mb-4">Cloud computing automation project using Ansible for event-driven infrastructure management.</p>
          <a href="/work/ansible-events" class="text-blue-400 hover:text-blue-300 font-semibold">View Project →</a>
        </div>

        <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-6 border border-gray-700">
          <h3 class="text-xl font-bold mb-3 text-white">ANPR/ALPR Flask</h3>
          <p class="text-gray-400 mb-4">Automatic Number Plate Recognition system built with Flask for real-time vehicle identification.</p>
          <a href="/work/anpr-flask" class="text-blue-400 hover:text-blue-300 font-semibold">View Project →</a>
        </div>
      </div>
    </div>
  </main>
</Layout>
