<div class="fixed inset-0 h-full w-full bg-gray-950 pointer-events-none -z-10">
  {/* Enterprise Grid Background */}
  <div class="absolute inset-0 h-full w-full bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:24px_24px]"></div>
  
  {/* Radial Spotlight */}
  <div class="absolute inset-0 bg-transparent bg-[radial-gradient(circle_800px_at_50%_40%,#1e1e2e00,transparent)]">
    {/* Subtle accent blob */}
    <div class="absolute top-[-10%] left-[20%] w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[100px] animate-pulse" style={{ animationDuration: '4s' }}></div>
    <div class="absolute bottom-[-10%] right-[20%] w-[500px] h-[500px] bg-purple-500/10 rounded-full blur-[100px] animate-pulse" style={{ animationDuration: '7s' }}></div>
  </div>
  
  {/* Vignette for focus */}
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#030712_100%)]"></div>
</div>
